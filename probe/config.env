# -------------------------------
# Web UI
# -------------------------------
# Port the Flask web UI will listen on inside the container.
WEB_PORT=8080

# -------------------------------
# Storage (SQLite)
# -------------------------------
# Path to the SQLite database file inside the container.
DB_PATH=/data/netprobe.sqlite

# -------------------------------
# Probe timing
# -------------------------------
# Interval between probe runs in seconds.
PROBE_INTERVAL=30

# Number of ICMP packets to send per ping target during each probe.
PING_COUNT=20

# -------------------------------
# Ping target sites
# -------------------------------
# List of public sites to ping (comma-separated, max ~5 recommended).
# These are used to compute external latency, jitter, and loss.
SITES=fast.com,google.com,youtube.com,amazon.com

# Optional: specific router IP to ping (internal).
# If left blank, only the default gateway detected via `ip route` is used.
ROUTER_IP=

# -------------------------------
# DNS configuration
# -------------------------------
# Domain used when testing DNS resolution performance.
DNS_TEST_SITE=google.com

# DNS name servers (4 slots). The 4th is typically your home DNS.
DNS_NAMESERVER_1=Google_DNS
DNS_NAMESERVER_1_IP=8.8.8.8

DNS_NAMESERVER_2=Quad9_DNS
DNS_NAMESERVER_2_IP=9.9.9.9

DNS_NAMESERVER_3=CloudFlare_DNS
DNS_NAMESERVER_3_IP=1.1.1.1

DNS_NAMESERVER_4=My_DNS_Server
DNS_NAMESERVER_4_IP=192.168.1.1

# -------------------------------
# Internet Quality Score Weights
# -------------------------------
# These should sum to 1.0
WEIGHT_LOSS=0.6          # Loss is 60% of score
WEIGHT_LATENCY=0.15      # Latency is 15% of score
WEIGHT_JITTER=0.2        # Jitter is 20% of score
WEIGHT_DNS_LATENCY=0.05  # DNS latency is 5% of score

# -------------------------------
# Internet Quality Score Thresholds
# -------------------------------
# Threshold values at which each metric is treated as "maximally bad"
THRESHOLD_LOSS=5          # 5% loss threshold
THRESHOLD_LATENCY=100     # 100 ms latency threshold
THRESHOLD_JITTER=30       # 30 ms jitter threshold
THRESHOLD_DNS_LATENCY=100 # 100 ms DNS latency threshold

# -------------------------------
# Speedtest configuration
# -------------------------------
# Be careful on metered connections!
SPEEDTEST_ENABLED=True     # Set to True to enable periodic speed tests
SPEEDTEST_INTERVAL=14400   # Interval in seconds (4 hours = 14400)
